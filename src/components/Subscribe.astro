<section class="subscribe-section">
  <div class="container">
    <div class="subscribe-card">
      <div class="subscribe-content">
        <h3 class="subscribe-title">Stay Updated</h3>
        <p class="subscribe-description">
          Get notified about new blog posts, project launches, and insights from the cloud.
        </p>
        <form class="subscribe-form" id="subscribe-form">
          <div class="form-group">
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="Enter your email address"
              class="email-input"
              required
            />
            <button type="submit" class="btn btn-primary">
              Subscribe
            </button>
          </div>
          <p class="subscribe-note">
            No spam, unsubscribe at any time. I respect your privacy.
          </p>
        </form>
        <div class="subscribe-success" id="subscribe-success" style="display: none;">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
            <polyline points="22,4 12,14.01 9,11.01"/>
          </svg>
          <p>Thanks for subscribing! Check your email to confirm.</p>
        </div>
        <div class="subscribe-error" id="subscribe-error" style="display: none;">
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <line x1="15" y1="9" x2="9" y2="15"/>
            <line x1="9" y1="9" x2="15" y2="15"/>
          </svg>
          <p>Something went wrong. Please try again.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .subscribe-section {
    padding: 4rem 0;
    background: linear-gradient(135deg, var(--bg-secondary) 0%, var(--bg-tertiary) 100%);
  }

  .subscribe-card {
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: 2rem;
    padding: 3rem;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .subscribe-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, rgba(0, 212, 255, 0.05) 0%, transparent 70%);
    pointer-events: none;
  }

  .subscribe-content {
    position: relative;
    z-index: 1;
  }

  .subscribe-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subscribe-description {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .subscribe-form {
    max-width: 500px;
    margin: 0 auto;
  }

  .form-group {
    display: flex;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .email-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border: 1px solid var(--border-color);
    border-radius: 0.75rem;
    background: var(--bg-secondary);
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s ease;
  }

  .email-input:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.1);
  }

  .email-input::placeholder {
    color: var(--text-muted);
  }

  .subscribe-note {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-top: 1rem;
  }

  .subscribe-success,
  .subscribe-error {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 0.75rem;
    margin-top: 1rem;
  }

  .subscribe-success {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  .subscribe-error {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.2);
  }

  @media (max-width: 768px) {
    .subscribe-card {
      padding: 2rem;
    }

    .subscribe-title {
      font-size: 1.5rem;
    }

    .form-group {
      flex-direction: column;
    }

    .email-input {
      margin-bottom: 0;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('subscribe-form');
    const successMessage = document.getElementById('subscribe-success');
    const errorMessage = document.getElementById('subscribe-error');

    if (form) {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const email = formData.get('email');

        try {
          // Simulate API call - replace with actual subscription service
          await new Promise(resolve => setTimeout(resolve, 1000));
          
          // Show success message
          form.style.display = 'none';
          successMessage.style.display = 'flex';
          
          // Reset form after 5 seconds
          setTimeout(() => {
            form.style.display = 'block';
            successMessage.style.display = 'none';
            form.reset();
          }, 5000);
          
        } catch (error) {
          // Show error message
          errorMessage.style.display = 'flex';
          
          // Hide error after 3 seconds
          setTimeout(() => {
            errorMessage.style.display = 'none';
          }, 3000);
        }
      });
    }
  });
</script>