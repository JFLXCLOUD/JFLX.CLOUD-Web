---
const githubStats = {
  username: "jflxcloud",
  repositories: 3,
  followers: 0,
  following: 2,
  contributions: 2
};

const featuredRepos = [
  {
    name: "GAM Command Bank,
    description: "A simple application to store, fill, execute, and categorize common commands used by GAM, PS and AD.",
    language: "Python",
    stars: 1,
    forks: 0,
    updated: "2025-07-10"
  },
  
];

function getLanguageColor(language: string) {
  const colors = {
    'TypeScript': '#3178c6',
    'JavaScript': '#f1e05a',
    'Vue': '#4fc08d',
    'Python': '#3572a5',
    'Go': '#00add8'
  };
  return colors[language] || '#8b949e';
}
---

<section id="github" class="section">
  <div class="container">
    <h2 class="section-title">GitHub Activity</h2>
    
    <div class="github-stats">
      <div class="stat-item">
        <div class="stat-value">{githubStats.repositories}</div>
        <div class="stat-label">Repositories</div>
      </div>
      <div class="stat-item">
        <div class="stat-value">{githubStats.followers}</div>
        <div class="stat-label">Followers</div>
      </div>
      <div class="stat-item">
        <div class="stat-value">{githubStats.following}</div>
        <div class="stat-label">Following</div>
      </div>
      <div class="stat-item">
        <div class="stat-value">{githubStats.contributions}</div>
        <div class="stat-label">Contributions</div>
      </div>
    </div>

    <div class="repos-section">
      <h3 class="repos-title">Featured Repositories</h3>
      <div class="repos-grid grid grid-2">
        {featuredRepos.map((repo) => (
          <div class="repo-card card">
            <div class="repo-header">
              <h4 class="repo-name">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                {repo.name}
              </h4>
              <a href={`https://github.com/${githubStats.username}/${repo.name}`} class="repo-link" target="_blank" rel="noopener noreferrer">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="m9 18 6-6-6-6"/>
                </svg>
              </a>
            </div>
            <p class="repo-description">{repo.description}</p>
            <div class="repo-meta">
              <div class="repo-language">
                <span class="language-dot" style={`background-color: ${getLanguageColor(repo.language)}`}></span>
                {repo.language}
              </div>
              <div class="repo-stats">
                <span class="repo-stat">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                  {repo.stars}
                </span>
                <span class="repo-stat">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
                  </svg>
                  {repo.forks}
                </span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>

    <div class="github-cta">
      <a href={`https://github.com/${githubStats.username}`} class="btn btn-primary" target="_blank" rel="noopener noreferrer">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View GitHub Profile
      </a>
    </div>
  </div>
</section>

<style>
  .github-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 2rem;
    margin-bottom: 4rem;
  }

  .stat-item {
    text-align: center;
    padding: 2rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    border-radius: 1rem;
    transition: all 0.3s ease;
  }

  .stat-item:hover {
    border-color: var(--accent-primary);
    transform: translateY(-2px);
  }

  .stat-value {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--accent-primary);
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: var(--text-secondary);
    font-weight: 500;
  }

  .repos-section {
    margin-bottom: 3rem;
  }

  .repos-title {
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }

  .repo-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .repo-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
  }

  .repo-name {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0;
  }

  .repo-link {
    color: var(--text-muted);
    transition: color 0.3s ease;
  }

  .repo-link:hover {
    color: var(--accent-primary);
  }

  .repo-description {
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    flex-grow: 1;
    line-height: 1.5;
  }

  .repo-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
  }

  .repo-language {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-secondary);
  }

  .language-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .repo-stats {
    display: flex;
    gap: 1rem;
  }

  .repo-stat {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--text-muted);
  }

  .github-cta {
    text-align: center;
  }

  @media (max-width: 768px) {
    .github-stats {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .stat-item {
      padding: 1.5rem;
    }

    .stat-value {
      font-size: 2rem;
    }
  }
</style>
